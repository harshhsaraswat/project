
    
<%- include('./partials/header') %>

<style>
    /* General body styling */
body {
    background-color: #f4f7f6;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    color: #333;
}

/* Header and footer styling */
header, footer {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 10px;
}

h1 {
    font-size: 36px;
    color: #333;
    text-align: center;
    margin-top: 20px;
}

a {
    
    text-decoration: none;
    color: #007bff;
    font-weight: bold;
    transition: color 0.3s ease;
}

a:hover {
    color: #0056b3;
}

/* Styling the new blog link */
a[href="/blog/new"] {
    display: inline-block;
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    margin: 20px auto;
    text-align: center;
    font-size: 18px;
    transition: background-color 0.3s ease;
    margin: 0px 0px 0px 610px;
}

a[href="/blog/new"]:hover {
    background-color: #0056b3;
}

/* Article and blog post containers */
article {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 20px;
    gap: 20px;
}

.container {
    background-color: white;
    border-radius: 8px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    padding: 20px;
    max-width: 400px;
    width: 100%;
    margin-bottom: 20px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.container:hover {
    transform: translateY(-5px);
    box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
}

.container h1, .container h2, .container h3 {
    text-align: center;
    margin: 0;
    color: #333;
}

.container p {
    text-align: justify;
    color: #666;
    margin-top: 10px;
}

.container a {
    display: block;
    background-color: #28a745;
    color: white;
    text-align: center;
    padding: 10px;
    border-radius: 5px;
    font-size: 16px;
    margin-top: 10px;
    transition: background-color 0.3s ease;
}

.container a:hover {
    background-color: #218838;
}

/* Responsive design for smaller screens */
@media (max-width: 768px) {
    article {
        flex-direction: column;
        align-items: center;
    }
}

</style>

<h1>Displaying all the Blogs</h1>
<a href="/blog/new">NEW</a>
<article>
    <% for(let blog of allBlogs){ %>
        <div class="container">
            <h1 ><%=blog.id%></h1>
            <h2><%=blog.title%></h2>
            <h3><%=blog.author%></h3>
            <p><%=blog.comment%></p>
            <p> <a href="/blogs/<%=blog.id%>">Show</a> </p>
        </div>
    <% } %>

</article>

<%- include('./partials/footer') %>